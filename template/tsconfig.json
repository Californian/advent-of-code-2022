{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2022",
    "esModuleInterop": true,
    "outDir": "build/",
    "baseUrl": ".",
    "paths": {
      "src/*": ["*"],
      "types/*": ["*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./__tests__/*.ts", "./types/**.ts"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "rootDir": "."
    },
    "esm": true
  }
}
